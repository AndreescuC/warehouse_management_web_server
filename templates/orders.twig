{% block content %}
  {{ include('components/side_menu.twig', {'warehouse_name': warehouse_name}) }}

  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="WH Admin">
    <meta name="author" content="GeeksLabs">
    <meta name="keyword" content="Creative, Dashboard, Admin, Template, Theme, Bootstrap, Responsive, Retina, Minimal">
    <link rel="shortcut icon" href={{ asset('assets/img/favicon.png') }}>

    <title>WH Admin</title>
    <style>
      .tooltip {
        position: relative;
        display: inline-block;
        border-bottom: 1px dotted black;
      }

      .tooltip .tooltiptext {
        visibility: hidden;
        width: 120px;
        background-color: black;
        color: #fff;
        text-align: center;
        padding: 5px 0;
        border-radius: 6px;

        position: absolute;
        z-index: 1;
      }

      .tooltip:hover .tooltiptext {
        visibility: visible;
      }
    </style>

    <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href={{ asset('assets/css/bootstrap-theme.css') }} rel="stylesheet">
    <link href={{ asset('assets/css/elegant-icons-style.css') }} rel="stylesheet" />
    <link href={{ asset('assets/css/font-awesome.min.css') }} rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/v4-shims.css">
    <link href={{ asset('assets/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.css') }} rel="stylesheet" type="text/css" media="screen" />
    <link rel="stylesheet" href={{ asset('assets/css/owl.carousel.css') }} type="text/css">
    <link href={{ asset('assets/css/jquery-jvectormap-1.2.2.css') }} rel="stylesheet">
    <link href={{ asset('assets/css/widgets.css') }} rel="stylesheet">
    <link href={{ asset('assets/css/style.css') }} rel="stylesheet">
    <link href={{ asset('assets/css/style-responsive.css') }} rel="stylesheet" />
    <link href={{ asset('assets/css/xcharts.min.css') }} rel="stylesheet">
    <link href={{ asset('assets/css/jquery-ui-1.10.4.min.css') }} rel="stylesheet">
  </head>

  <body>
  <!-- container section start -->
  <section id="container" class="">
    <!--header start-->
    <header class="header dark-bg">
      {{ include('components/header.twig') }}
    </header>
    <!--main content start-->
    <section id="main-content">
      <section class="wrapper">
        <div class="row">
          <div class="col-lg-12">
            <h3 class="page-header"><i class="fa fa-table"></i> Orders</h3>
            <ol class="breadcrumb">
              <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
              <li><i class="fa fa-table"></i>Warehouse</li>
              <li><i class="fa fa-th-list"></i>Orders</li>
            </ol>
          </div>
        </div>
        <!-- page start-->
        <div class="row">
          <div class="col-lg-12">
            <section class="panel">
              <header class="panel-heading">
                Advanced Table
              </header>

              <table class="table table-striped table-advance table-hover">
                <tbody>
                <tr>
                  <th><i class="icon_id"></i> Id</th>
                  <th><i class="fas fa-truck"></i> Shipment Id</th>
                  <th><i class="fab fa-delicious"></i> Status</th>
                  <th><i class="fas fa-map-marker"></i> Address</th>
                  <th><i class="icon_star"></i> Type</th>
                  <th><i class="icon_cogs"></i> Action</th>
                </tr>
                {% for order in orders %}
                  <tr>
                    <td>{{ order.id }}</td>
                    <td>{{ order.shipment_id }}</td>
                    <td>{{ order.status }}</td>
                    <td>{{ order.address }}</td>
                    <td>{{ order.type }}</td>
                    <td>
                      <div class="btn-group">
                        {% if  order.status != 2 %}
                          <a class="btn btn-success" href="/order/mark/{{ warehouse_name }}/{{ order.id }}"><i class="icon_drawer"></i></a>
                        {% endif %}
                        <a class="btn btn-danger" href="/order/remove/{{ warehouse_name }}/{{ order.id }}"><i class="icon_trash"></i></a>
                      </div>
                    </td>
                  </tr>
                {% endfor %}
                </tbody>
              </table>
            </section>
          </div>
        </div>
        <!-- page end-->
      </section>
    </section>
    <!--main content end-->
    <div class="text-right">
      <div class="credits">
        <!--
          All the links in the footer should remain intact.
          You can delete the links only if you purchased the pro version.
          Licensing information: https://bootstrapmade.com/license/
          Purchase the pro version form: https://bootstrapmade.com/buy/?theme=NiceAdmin
        -->
      </div>
    </div>
  </section>
  <script src="{{ asset('niceAdminBootStrap/js/jquery.js') }}"></script>
  <script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
  <script src="{{ asset('assets/js/jquery.scrollTo.min.js') }}"></script>
  <script src="{{ asset('assets/js/jquery.nicescroll.js') }}" type="text/javascript"></script>
  <script src="{{ asset('assets/js/scripts.js') }}"></script>


  </body>

{% endblock %}

